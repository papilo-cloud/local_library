extends layout
block content
    h1 Author: #{author.name}
    p= author.birth_date
    div(style='margin-left:20px; margin-top:20px')
        h2 Books
        if author_books.length
            dl
                each val in author_books
                    dt
                        a(href=val.url) #{val.title} 
                    dd #{val.summary} 
        else
            p This author has no books.
        hr
        p.delete
            a(href=author.url+'/delete') Delete author